@model FoodiesCore.ViewModels.HomePageViewModel

<html>
<head>
    <title>FoodiesCore</title>    
</head>
<body>
    <h1>Welcome!</h1>
    <h3>@Model.CurrentMessage</h3>
    <table>
        @foreach (var restaurant in Model.Restaurants)
        {
            <tr>
                <td>@restaurant.Id</td>
                <td>@restaurant.Name</td>
            </tr>
        }
    </table>
</body>
</html>
