@model IEnumerable<MeetHub.Models.Meetup>

@{
    ViewBag.Title = "Home Page";
}

<ul class="meetups">
    @foreach (var meetup in Model)
    {
        <li>
            <div class="date">
                <div class="year">
                    @meetup.DateTime.ToString("yyyy")
                </div>
                <div class="month">
                    @meetup.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @meetup.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="title">@meetup.Title</span>
                <span class="group">@meetup.Group.Name</span>
                <span class="category">@meetup.Category.Name</span>
                <button data-meetup-id="@meetup.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Attending?</button>
            </div>
        </li>
    }
</ul>

@section scripts {
    <script>
        $(document)
            .ready(function() {
                $(".js-toggle-attendance")
                    .click(function(event) {
                        var button = $(event.target);
                        $.post("/api/attendances", { "meetupId": button.attr("data-meetup-id") })
                            .done(function() {
                                button.removeClass("btn-default")
                                    .addClass("btn-danger")
                                    .text("Attending");
                            })
                            .fail(function() {
                                alert("Something failed!");
                            });
                    });
            });
    </script>
}
