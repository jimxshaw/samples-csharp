@model IEnumerable<MeetHub.Models.Meetup>

@{
    ViewBag.Title = "Home Page";
}

<ul class="meetups">
    @foreach (var meetup in Model)
    {
        <li>
            <div class="date">
                <div class="year">
                    @meetup.DateTime.ToString("yyyy")
                </div>
                <div class="month">
                    @meetup.DateTime.ToString("MMM")
                </div>
                <div class="day">
                    @meetup.DateTime.ToString("d ")
                </div>
            </div>
            <div class="details">
                <span class="title">@meetup.Title</span>
                <span class="group">
                    @meetup.Group.Name
                    <button data-followee-id="@meetup.GroupId" class="btn btn-link btn-sm js-toggle-following">Follow?</button>
                </span>
                <span class="category">
                    @meetup.Category.Name
                    <button data-meetup-id="@meetup.Id" class="btn btn-default btn-sm pull-right js-toggle-attendance">Attending?</button>
                </span>
            </div>
        </li>
    }
</ul>

@section scripts {
    <script>
        $(document)
            .ready(function () {
                $(".js-toggle-attendance")
                    .click(function (event) {
                        var button = $(event.target);
                        $.post("/api/attendances", { meetupId: button.attr("data-meetup-id") })
                            .done(function () {
                                button.removeClass("btn-default")
                                    .addClass("btn-danger")
                                    .text("Attending");
                            })
                            .fail(function () {
                                alert("Something failed!");
                            });
                    });

                $(".js-toggle-following")
                    .click(function (event) {
                        var button = $(event.target);
                        $.post("/api/followings", { followeeId: button.attr("data-followee-id") })
                            .done(function () {
                                button.text("Following");
                            })
                            .fail(function () {
                                alert("Something failed!");
                            });
                    });
            });
    </script>
}
